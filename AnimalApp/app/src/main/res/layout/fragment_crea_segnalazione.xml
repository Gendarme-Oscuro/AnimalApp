<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FragmentCreaSegnalazione">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">

        <EditText
            android:id="@+id/editDomandaSegnalazione"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:hint="Inserisci segnalazione" />

        <Button
            android:id="@+id/btnSelezionaImmaginiSegnalazione"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/baseline_image_24"/>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btnLocation"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/baseline_location_on_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photosRecyclerViewSegnalazioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|end">

        <Button
            android:id="@+id/btnInviaSegnalazione"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="INVIA"
            android:backgroundTint="@color/light_green"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginEnd="60dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="end">

            <Button
                android:id="@+id/deleteAllImagesSegnalazione"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/baseline_delete_24"
                android:visibility="gone" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
