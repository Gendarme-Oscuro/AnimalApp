<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimalist_background"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout"
    tools:context=".AnimalProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/minimalist_background">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragmentContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center_vertical"
                            android:elevation="8dp"
                            app:cardElevation="10dp">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/profile_pic"
                                android:background="@drawable/baseline_person_24"
                                android:clickable="true"
                                android:scaleType="fitCenter"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profile_company_name_fvp"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="start"
                                android:hint="Company Name"
                                android:textColorHint="@color/light_green"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/light_green"
                                android:textSize="25sp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/animal_name"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="start"
                                android:hint="Nome"
                                android:textColorHint="@color/black"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="25sp" />

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/animal_type"
                                android:layout_marginBottom="2dp"
                                android:hint="Tipo animale"
                                android:textColorHint="@color/black"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:gravity="start"
                                android:textSize="25sp"/>

                            <TextView
                                android:id="@+id/animal_age"
                                android:layout_width="170dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="start"
                                android:hint="Età"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="25sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/EditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_margin="10dp"
                            android:background="@color/black"
                            android:src="@drawable/baseline_mode_edit_24"
                            android:text="modifica account"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:layout_marginTop="170dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/bio"
                            android:layout_width="100dp"
                            android:layout_marginTop="9dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Biografia"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:background="@drawable/custom_edittext"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="370dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TableLayout
                            android:id="@+id/tableLayoutsalute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">
                        </TableLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:text="Vaccinazioni"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/EditVaccinazioni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:clickable="true"
                                android:src="@drawable/baseline_mode_edit_24"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tableLayoutVaccinazioni"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">

                            <!-- Default row -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Data"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Spesa €"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                            </TableRow>

                        </TableLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:text="Sverminazioni"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/EditSverminazioni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:clickable="true"
                                android:src="@drawable/baseline_mode_edit_24"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tableLayoutSverminazioni"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">

                            <!-- Default row -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Data"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Spesa €"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:text="Visite"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/EditVisite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:clickable="true"
                                android:src="@drawable/baseline_mode_edit_24"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tableLayoutVisite"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">

                            <!-- Default row -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Data"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Spesa €"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:text="Cibo"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/EditCibo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:clickable="true"
                                android:src="@drawable/baseline_mode_edit_24"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tableLayoutCibo"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">

                            <!-- Default row -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Data"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Spesa €"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:text="Altro"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/EditAltro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:clickable="true"
                                android:src="@drawable/baseline_mode_edit_24"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tableLayoutAltro"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:stretchColumns="0,1">

                            <!-- Default row -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Data"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Spesa €"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textSize="30sp"
                                android:background="@drawable/custom_edittext"
                                android:text="Spesa Totale"/>

                            <TextView
                                android:id="@+id/spesa_totale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:textSize="30sp"
                                android:background="@drawable/table_row_border"
                                android:text="0"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/qr_code_image_view"
                                android:layout_width="190dp"
                                android:layout_height="190dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>


                    </LinearLayout>



                </FrameLayout>

            </LinearLayout>
        </ScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity = "start">

        <include layout="@layout/nav_drawer" />

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>