<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardPreventCornerOverlap="false"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imageViewAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_person_24"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_name_answer_tv"
                    android:text="Nome compagnia"
                    android:textColor="@color/black"
                    android:paddingStart="3dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_answer_tv"
                    android:text="Nome"
                    android:textColor="@color/black"
                    android:paddingStart="3dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/surname_answer_tv"
                    android:text="Cognome"
                    android:textColor="@color/black"
                    android:paddingStart="3dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_answer_tv"
                    android:text="Ora"
                    android:textColor="@color/black"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:textSize="8sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risposta"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/answer_tv"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
