<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ViewProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/light_green">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_menu_fvp"
                android:src="@drawable/baseline_menu_24"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY PROFILE"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_edit_fvp"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_mode_edit_24"
                android:background="@android:color/transparent"
                android:layout_gravity="end|center_vertical" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_pic_fvp"
                    android:background="@drawable/baseline_person_24"
                    android:clickable="true"
                    android:scaleType="fitCenter"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name_fvp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="Nome"
                    android:textColorHint="@color/light_green"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/light_green"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_surname_fvp"
                    android:layout_marginBottom="2dp"
                    android:hint="Cognome"
                    android:textColorHint="@color/light_green"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/light_green"
                    android:gravity="start"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_age_fvp"
                    android:layout_marginBottom="2dp"
                    android:hint="EtÃ "
                    android:textColorHint="@color/light_green"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/light_green"
                    android:gravity="start"
                    android:textSize="15sp"/>



            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="ALTRI DETTAGLI"
            android:paddingStart="40dp"
            android:paddingLeft="40dp"
            android:padding="5dp"
            android:background="@color/light_green"
            android:textColor="@color/white"
            android:gravity="start"
            android:textSize="15sp"/>

    </FrameLayout>






</LinearLayout>