                                android:layout_height="wrap_content">

                                <!-- Columns -->
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Descrizione"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:background="@drawable/table_row_border" />

                                <TextView

