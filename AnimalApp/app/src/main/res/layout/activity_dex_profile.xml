<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/minimalist_background"
tools:context=".DexProfile">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                app:cardElevation="10dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_pic"
                    android:background="@drawable/baseline_person_24"
                    android:clickable="true"
                    android:scaleType="fitCenter"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_company_name_fvp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="Company Name"
                    android:textColorHint="@color/light_green"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/light_green"
                    android:textSize="25sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/animal_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="Nome"
                    android:textColorHint="@color/black"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/animal_type"
                    android:layout_marginBottom="2dp"
                    android:hint="Tipo di animale"
                    android:textColorHint="@color/black"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/animal_age"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="EtÃ "
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bio"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Biografia"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


        <Button
            android:layout_marginTop="350dp"
            android:backgroundTint="@color/red"
            android:id="@+id/delete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="delete from pokedex" />





    </FrameLayout>

</LinearLayout>
</ScrollView>
